---

const { currentPage, sizeNumber, prev, next } = Astro.props
---


<div class="flex items-center justify-center gap-3 mt-12">
    <a
      href={prev}
      class="inline-flex h-12 w-12 items-center justify-center rounded border border-gray-100 bg-white text-gray-900 rtl:rotate-180"
    >
      <span class="sr-only">Next Page</span>
      <svg xmlns="http://www.w3.org/2000/svg" class={prev===null ? "text-gray-200 h-5 w-5 ":" h-5 w-5"} viewBox="0 0 20 20" fill="currentColor ">
        <path
          fill-rule="evenodd"
          d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
          clip-rule="evenodd"
        />
      </svg>
    </a>
  
    <p class="text-s text-gray-900">
      {currentPage}
      <span class="mx-0.25">/</span>
      {sizeNumber}
    </p>
  
    <a
      href={next}
      class="inline-flex h-12 w-12 items-center justify-center rounded border border-gray-100 bg-white text-gray-900 rtl:rotate-180"
    >
      <span class="sr-only">Next Page</span>
      <svg xmlns="http://www.w3.org/2000/svg" class={next === null ? "text-gray-200 h-5 w-5 ":" h-5 w-5"}  viewBox="0 0 20 20" fill="currentColor">
        <path
          fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd"
        />
      </svg>
    </a>
  </div>
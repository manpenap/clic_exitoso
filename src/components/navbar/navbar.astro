---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";

import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [


  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contacto",
    path: "/contacto",
  },
];
---

<Container>
  <header class="flex bg-gray-900 flex-col lg:flex-row justify-between items-center py-6 px-3">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          >
          <span class="font-bold text-transparent bg-clip-text bg-gradient-to-br from-violet-100 to-pink-300">ClicExitOso</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-white" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>


                {item && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-white hover:text-gray-900">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>

      </MenuItems>
    </Astronav>
    <div>

    </div>
  </header>
</Container>
